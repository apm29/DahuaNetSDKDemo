<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.company.netsdk.activity.TalkActivity">

    <LinearLayout
        android:weightSum="3"
        android:id="@+id/select_transfer_mode"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/transfer_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_weight="2"
            android:id="@+id/spinner_transfer_mode"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingLeft="0dp"
            android:background="@drawable/wp_spinner_bg"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:id="@+id/select_transfer_channel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_transfer_mode"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/transfer_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_weight="2"
            android:id="@+id/spinner_transfer_channel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingLeft="0dp"
            android:background="@drawable/wp_spinner_bg"/>
    </LinearLayout>

    <Button
        android:textAllCaps="false"
        android:id="@+id/buttonStartTalk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/start_talk"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="143dp" />



</RelativeLayout>
