<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dip">

    <ImageView android:id="@+id/rightimage"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:background="@drawable/list_row_next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/des_right_image"
        >
    </ImageView>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/rightimage"
        android:layout_centerHorizontal="true"
        android:gravity="start"
        android:layout_alignBottom="@+id/rightimage"
        android:layout_alignParentTop="true" />
</RelativeLayout>